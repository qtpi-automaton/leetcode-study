---

<Layout title="Practice Problems">
	<main>
		<h1>Practice Problems</h1>
		<p class="subtitle">Curated LeetCode problems organized by pattern</p>
		
		<div class="patterns-grid">
			{patterns.map((pattern) => (
				<div class="pattern-card">
					<h2>{pattern.name}</h2>
					<ul>
						{pattern.problems.map((problem) => (
							<li>
								<a href={problem.url} target="_blank" rel="noopener noreferrer">
									{problem.name} â†—
								</a>
							</li>
						))}
					</ul>
				</div>
			))}
		</div>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1.5rem;
		max-width: 1200px;
		color: white;
	}

	h1 {
		text-align: center;
		color: #60a5fa;
		margin-bottom: 0.5rem;
	}

	.subtitle {
		text-align: center;
		color: #9ca3af;
		margin-bottom: 2rem;
	}

	.patterns-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
		gap: 1.5rem;
	}

	.pattern-card {
		background: #1f2937;
		border-radius: 8px;
		padding: 1.25rem;
	}

	.pattern-card h2 {
		color: #34d399;
		font-size: 1.1rem;
		margin-bottom: 0.75rem;
		padding-bottom: 0.5rem;
		border-bottom: 1px solid #374151;
	}

	.pattern-card ul {
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.pattern-card li {
		margin: 0.5rem 0;
	}

	.pattern-card a {
		color: #93c5fd;
		text-decoration: none;
		font-size: 0.95rem;
		transition: color 0.2s;
	}

	.pattern-card a:hover {
		color: #60a5fa;
		text-decoration: underline;
	}
</style>
</Layout>
